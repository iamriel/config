# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh
export ANSIBLE_VAULT_PASSWORD_FILE=$HOME/.vault_pass.txt
export WORKON_HOME=$HOME/.virtualenvs
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python
export EDITOR='vim'
export RIPGREP_CONFIG_PATH=$HOME/.ripgreprc
export SASS_PATH=/usr/local/bin/sass
export GPG_TTY=$(tty)
export NVM_DIR=$HOME/.nvm
export PHPENV_ROOT=$HOME/.phpenv
export PYENV_ROOT=$HOME/.pyenv
export RBENV_ROOT=$HOME/.rbenv
export GOENV_ROOT=$HOME/.goenv
export GOENV_VERSION=1.11.4
export GOPATH=$HOME/gopath/$GOENV_VERSION
export PIPENV_IGNORE_VIRTUALENVS=1

# Paths
typeset -gU cdpath fpath mailpath manpath path
typeset -gUT INFOPATH infopath

# Set the list of directories that info searches for manuals.
infopath=(
  /usr/local/share/info
  /usr/share/info
  $infopath
)

# Set the list of directories that man searches for manuals.
manpath=(
  /usr/local/share/man
  /usr/share/man
  $manpath
)

for path_file in /etc/manpaths.d/*(.N); do
  manpath+=($(<$path_file))
done
unset path_file

# Set the list of directories that Zsh searches for programs.
path=(
  /usr/local/opt/openssl/bin
  /usr/local/{bin,sbin}
  /usr/{bin,sbin}
  /{bin,sbin}
  $HOME/.yarn/bin
  $GOPATH/bin
  $PHPENV_ROOT/{bin,shims}
  $GOENV_ROOT/{bin,shims}
  $PYENV_ROOT/{bin,shims}
  $RBENV_ROOT/bin
  # OSX
  /usr/local/opt/python/libexec/bin
  /usr/local/opt/ffmpeg@2.8/bin
  /usr/local/opt/php56/bin
  /usr/local/opt/gnu-getopt/bin
  /usr/local/opt/apr/bin
  /usr/local/opt/apr-util/bin
  /Library/Frameworks/Mono.framework/Versions/Current/Commands
  /Users/light/Library/Python/3.6/bin
  /usr/local/opt/gettext/bin
  /usr/local/Cellar/node/9.4.0/lib/node_modules/nuxt/bin
  $path
)

for path_file in /etc/paths.d/*(.N); do
  path+=($(<$path_file))
done
unset path_file
